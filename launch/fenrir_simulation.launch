<launch>

    <param name="robot_description" command="$(find xacro)/xacro '$(find fenrir)/urdf/fenrir.xacro'"/>

    <!-- Joint values -->
    <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher">
        <remap from="joint_states" to="fenrir/joint_states"/>
    </node>

    <!-- Rviz -->
    <node name="rviz" pkg="rviz" type="rviz" args="-d $(find fenrir)/urdf/simulation.rviz"/>

</launch>